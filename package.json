{
  "name": "ollama-code",
  "version": "1.1.0",
  "description": "Cost-effective AI code assistant - 100% local, $0 cost alternative to Claude Code",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ollama-code": "dist/cli.js",
    "ollama-code-mcp": "dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "mcp": "tsx src/mcp-server.ts",
    "start": "node dist/cli.js",
    "watch": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "install-global": "npm run build && npm link",
    "update-global": "npm run build && npm link --force",
    "uninstall-global": "npm unlink -g ollama-code",
    "link": "npm run install-global",
    "unlink": "npm run uninstall-global"
  },
  "keywords": [
    "ollama",
    "qwen",
    "gpt-oss",
    "code-assistant",
    "ai",
    "cli",
    "llm",
    "local-ai",
    "coding-assistant",
    "developer-tools"
  ],
  "author": "Core System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ollama-code.git"
  },
  "homepage": "https://github.com/yourusername/ollama-code#readme",
  "bugs": {
    "url": "https://github.com/yourusername/ollama-code/issues"
  },
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.1",
    "chalk": "^5.3.0",
    "cli-spinners": "^3.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "execa": "^9.5.2",
    "fast-glob": "^3.3.2",
    "glob": "^11.0.0",
    "ink": "^5.0.1",
    "node-fetch": "^2.7.0",
    "ora": "^8.2.0",
    "react": "^18.3.1",
    "yaml": "^2.6.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^18.3.18",
    "@vitest/coverage-v8": "^4.0.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
